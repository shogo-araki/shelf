@model shelf_project.Models.Product
@{
    ViewData["Title"] = $"{Model.Name} - {ViewBag.Distributor?.CompanyName}";
    var distributor = ViewBag.Distributor as shelf_project.Models.Distributor;
    var qrCode = ViewBag.QRCode as string;
    var averageRating = (double)ViewBag.AverageRating;
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/shop/@qrCode">@distributor?.CompanyName</a>
            </li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="container">
        <div class="row">
            <!-- Product Image -->
            <div class="col-lg-6 mb-4">
                <div class="product-image-container">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow-lg" alt="@Model.Name" style="width: 100%; max-height: 500px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-light rounded d-flex align-items-center justify-content-center shadow-lg" style="height: 400px;">
                            <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                        </div>
                    }
                </div>
            </div>

            <!-- Product Details -->
            <div class="col-lg-6">
                <div class="product-details">
                    <!-- Product Title -->
                    <h1 class="display-6 mb-2">@Model.Name</h1>
                    <p class="text-muted mb-3">
                        <i class="bi bi-building"></i> @Model.Manufacturer.CompanyName
                    </p>

                    <!-- Rating -->
                    @if (Model.Reviews?.Any(r => r.IsApproved) == true)
                    {
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star@(i <= averageRating ? "-fill text-warning" : " text-muted")"></i>
                                }
                                <span class="ms-2 text-muted">(@Model.Reviews.Count(r => r.IsApproved) 件のレビュー)</span>
                            </div>
                        </div>
                    }

                    <!-- Price -->
                    <div class="mb-4">
                        <h2 class="text-primary mb-0">¥@Model.RetailPrice.ToString("N0")</h2>
                        @if (Model.FreeShippingThreshold.HasValue)
                        {
                            <small class="text-muted">¥@Model.FreeShippingThreshold.Value.ToString("N0") 以上で送料無料</small>
                        }
                    </div>

                    <!-- Product Badges -->
                    <div class="mb-4">
                        @if (!string.IsNullOrEmpty(Model.Category))
                        {
                            <span class="badge bg-secondary me-2">@Model.Category</span>
                        }
                        @if (Model.RequiresRefrigeration || Model.RequiresFreezing)
                        {
                            <span class="badge bg-info me-2">@(Model.RequiresFreezing ? "冷凍配送" : "冷蔵配送")</span>
                        }
                        @if (Model.StockQuantity > 0)
                        {
                            <span class="badge bg-success">在庫あり</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">在庫切れ</span>
                        }
                    </div>

                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5>商品説明</h5>
                            <p class="text-muted">@Model.Description</p>
                        </div>
                    }

                    <!-- Purchase Section -->
                    <div class="purchase-section bg-light p-4 rounded">
                        <h5 class="mb-3">ご購入について</h5>
                        @if (Model.StockQuantity > 0)
                        {
                            <div class="alert alert-info mb-3">
                                <i class="bi bi-info-circle"></i>
                                この商品は <strong>@distributor?.CompanyName</strong> 経由でご購入いただけます。
                            </div>
                            <div class="mb-3">
                                <strong>最小注文数量:</strong> @Model.MinimumOrderQuantity 個<br>
                                <strong>配送料:</strong> 
                                @if (Model.ShippingFee > 0)
                                {
                                    <span>¥@Model.ShippingFee.ToString("N0")</span>
                                }
                                else
                                {
                                    <span class="text-success">無料</span>
                                }
                            </div>
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>注意:</strong> 現在、直接購入機能は開発中です。ご購入をご希望の場合は、店舗スタッフまでお声がけください。
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-x-circle"></i>
                                申し訳ございません。現在この商品は在庫切れです。
                            </div>
                        }
                    </div>

                    <!-- Back to Shop -->
                    <div class="mt-4">
                        <a href="/shop/@qrCode" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left"></i> 商品一覧に戻る
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reviews Section -->
        @if (Model.Reviews?.Any(r => r.IsApproved) == true)
        {
            <div class="row mt-5">
                <div class="col-12">
                    <h3 class="mb-4">お客様レビュー</h3>
                    @foreach (var review in Model.Reviews.Where(r => r.IsApproved).OrderByDescending(r => r.CreatedAt))
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <strong>@review.User?.FirstName @review.User?.LastName</strong>
                                        <div class="text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi bi-star@(i <= review.Rating ? "-fill" : "")"></i>
                                            }
                                        </div>
                                    </div>
                                    <small class="text-muted">@review.CreatedAt.ToString("yyyy/MM/dd")</small>
                                </div>
                                @if (!string.IsNullOrEmpty(review.Comment))
                                {
                                    <p class="mb-0">@review.Comment</p>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
    .product-image-container img:hover {
        transform: scale(1.02);
        transition: transform 0.3s ease;
    }
    
    .purchase-section {
        border-left: 4px solid #007bff;
    }
    
    .badge {
        font-size: 0.8rem;
    }
</style>