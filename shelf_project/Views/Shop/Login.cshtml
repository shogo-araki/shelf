@model shelf_project.ViewModels.ConsumerLoginViewModel
@{
    ViewData["Title"] = "ログイン";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-shopping-cart"></i>
                        ログイン
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <input asp-for="@ViewData["ReturnUrl"]" type="hidden" />
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="登録済みのメールアドレス" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <button type="submit" class="btn btn-info btn-lg w-100 mb-3">ログイン</button>
                    </form>

                    <hr>

                    <div class="text-center">
                        <p>アカウントをお持ちでない方は</p>
                        <a asp-action="Register" class="btn btn-outline-info">新規会員登録</a>
                    </div>

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            <a href="#" class="text-decoration-none">パスワードを忘れた方</a> |
                            <a asp-action="Index" class="text-decoration-none">商品を見る</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}