@model shelf_project.Models.Manufacturer

@{
    ViewData["Title"] = "売上分析";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">売上分析</h1>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> ダッシュボードに戻る
            </a>
        </div>
    </div>

    <!-- 期間選択 -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">期間選択</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="startDate" class="form-label">開始日</label>
                            <input type="date" class="form-control" id="startDate">
                        </div>
                        <div class="col-md-6">
                            <label for="endDate" class="form-label">終了日</label>
                            <input type="date" class="form-control" id="endDate">
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="button" class="btn btn-primary">分析更新</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 統計カード -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 mx-auto mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-currency-yen text-primary fs-3"></i>
                    </div>
                    <h6 class="text-muted mb-1">総売上</h6>
                    <h4 class="text-primary mb-0">¥0</h4>
                    <small class="text-muted">今月</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="bg-success bg-opacity-10 rounded-circle p-3 mx-auto mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-cart-check text-success fs-3"></i>
                    </div>
                    <h6 class="text-muted mb-1">注文件数</h6>
                    <h4 class="text-success mb-0">0件</h4>
                    <small class="text-muted">今月</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 mx-auto mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-graph-up text-info fs-3"></i>
                    </div>
                    <h6 class="text-muted mb-1">平均注文額</h6>
                    <h4 class="text-info mb-0">¥0</h4>
                    <small class="text-muted">今月</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="bg-warning bg-opacity-10 rounded-circle p-3 mx-auto mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-people text-warning fs-3"></i>
                    </div>
                    <h6 class="text-muted mb-1">代理店数</h6>
                    <h4 class="text-warning mb-0">0店舗</h4>
                    <small class="text-muted">アクティブ</small>
                </div>
            </div>
        </div>
    </div>

    <!-- グラフエリア -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">月次売上推移</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <i class="bi bi-graph-up text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">売上データの分析機能は今後実装予定です</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">人気商品ランキング</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <i class="bi bi-bar-chart text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">商品分析機能は今後実装予定です</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 地域別売上 -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">地域別売上分析</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <i class="bi bi-geo-alt text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">地域別分析機能は今後実装予定です</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // 今後、Chart.jsやD3.jsを使用してグラフを実装予定
    document.addEventListener('DOMContentLoaded', function() {
        // 現在の日付を設定
        const today = new Date();
        const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
        
        document.getElementById('startDate').value = firstDay.toISOString().split('T')[0];
        document.getElementById('endDate').value = today.toISOString().split('T')[0];
    });
</script>