@model shelf_project.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "新商品登録";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>
            
            <form asp-action="CreateProduct" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <input asp-for="Category" class="form-control" placeholder="例: 食品・飲料・雑貨など" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="商品の特徴や魅力を記載してください"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="WholesalePrice" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">¥</span>
                                <input asp-for="WholesalePrice" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="WholesalePrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="RetailPrice" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">¥</span>
                                <input asp-for="RetailPrice" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="RetailPrice" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ShippingFee" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">¥</span>
                                <input asp-for="ShippingFee" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="ShippingFee" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="FreeShippingThreshold" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">¥</span>
                                <input asp-for="FreeShippingThreshold" class="form-control" type="number" step="0.01" />
                            </div>
                            <small class="form-text text-muted">この金額以上で送料無料（空白の場合は送料無料なし）</small>
                            <span asp-validation-for="FreeShippingThreshold" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="商品画像のURL" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="StockQuantity" class="form-label"></label>
                            <input asp-for="StockQuantity" class="form-control" type="number" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="MinimumOrderQuantity" class="form-label"></label>
                            <input asp-for="MinimumOrderQuantity" class="form-control" type="number" />
                            <span asp-validation-for="MinimumOrderQuantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label class="form-label">配送オプション</label>
                            <div>
                                <div class="form-check">
                                    <input asp-for="RequiresRefrigeration" class="form-check-input" />
                                    <label asp-for="RequiresRefrigeration" class="form-check-label"></label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="RequiresFreezing" class="form-check-input" />
                                    <label asp-for="RequiresFreezing" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mb-3">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" checked />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">登録</button>
                    <a asp-action="Products" class="btn btn-secondary">キャンセル</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}