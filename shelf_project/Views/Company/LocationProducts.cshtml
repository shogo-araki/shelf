@model IEnumerable<shelf_project.Models.DistributorProduct>
@{
    ViewData["Title"] = "拠点商品管理";
    var location = ViewBag.Location as shelf_project.Models.Distributor;
    var headOffice = ViewBag.HeadOffice as shelf_project.Models.Distributor;
    var availableProducts = ViewBag.AvailableProducts as IEnumerable<shelf_project.Models.Product>;
    var maxProducts = (int)ViewBag.MaxProducts;
    var currentCount = Model?.Count() ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-box-seam"></i> @location!.LocationName 商品管理</h1>
        <a href="@Url.Action("Locations")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> 拠点一覧に戻る
        </a>
    </div>

    <!-- 拠点情報 -->
    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="bi bi-info-circle"></i> 拠点情報</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>拠点名:</strong> @location.LocationName</p>
                    <p><strong>住所:</strong> @(location.Address ?? "未設定")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>電話番号:</strong> @(location.PhoneNumber ?? "未設定")</p>
                    <p><strong>選定可能商品数:</strong> @currentCount / @maxProducts 商品</p>
                </div>
            </div>
        </div>
    </div>

    <!-- 商品追加 -->
    @if (currentCount < maxProducts && availableProducts?.Any() == true)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="bi bi-plus-circle"></i> 商品を追加</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddProductToLocation" method="post" class="row g-3">
                    <input type="hidden" name="locationId" value="@location.Id" />
                    <div class="col-md-8">
                        <select name="productId" class="form-select" required>
                            <option value="">商品を選択してください...</option>
                            @foreach (var product in availableProducts)
                            {
                                <option value="@product.Id">
                                    @product.Name (@product.Manufacturer?.CompanyName) - ¥@product.RetailPrice.ToString("N0")
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-plus"></i> 追加
                        </button>
                    </div>
                </form>
                <div class="mt-2">
                    <small class="text-muted">
                        残り @(maxProducts - currentCount) 商品まで追加可能です
                    </small>
                </div>
            </div>
        </div>
    }
    else if (currentCount >= maxProducts)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            この拠点は最大商品数（@maxProducts 商品）に達しています。新しい商品を追加するには、既存の商品を削除してください。
        </div>
    }
    else if (availableProducts?.Any() != true)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            追加可能な商品がありません。すべての商品が既に選定済みです。
        </div>
    }

    <!-- 選定済み商品一覧 -->
    <div class="card">
        <div class="card-header">
            <h5><i class="bi bi-list"></i> 選定済み商品一覧</h5>
        </div>
        <div class="card-body">
            @if (Model?.Any() == true)
            {
                <div class="row">
                    @foreach (var distributorProduct in Model)
                    {
                        <div class="col-lg-6 col-md-12 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h6 class="card-title mb-1">@distributorProduct.Product?.Name</h6>
                                            <small class="text-muted">@distributorProduct.Product?.Manufacturer?.CompanyName</small>
                                        </div>
                                        <span class="badge bg-success">選定済み</span>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <div class="row text-center">
                                            <div class="col-6">
                                                <div class="border rounded p-2">
                                                    <small class="text-muted">価格</small>
                                                    <div class="fw-bold">¥@distributorProduct.Product?.RetailPrice.ToString("N0")</div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="border rounded p-2">
                                                    <small class="text-muted">手数料率</small>
                                                    <div class="fw-bold">5%</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar"></i> 選定日: @distributorProduct.AssignedAt.ToString("yyyy/MM/dd HH:mm")
                                        </small>
                                    </div>

                                    <form asp-action="RemoveProductFromLocation" method="post" 
                                          onsubmit="return confirm('商品「@distributorProduct.Product?.Name」の選定を解除しますか？')">
                                        <input type="hidden" name="locationId" value="@location.Id" />
                                        <input type="hidden" name="productId" value="@distributorProduct.ProductId" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                            <i class="bi bi-trash"></i> 選定解除
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-box-seam display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">選定済み商品がありません</h4>
                    <p class="text-muted">上のフォームから商品を追加してください。</p>
                </div>
            }
        </div>
    </div>

    <!-- 注意事項 -->
    <div class="alert alert-info mt-4">
        <h6><i class="bi bi-info-circle"></i> 商品選定について</h6>
        <ul class="mb-0">
            <li>各拠点は最大@maxProducts商品まで選定可能です</li>
            <li>選定した商品のみがその拠点のQRコードサイトに表示されます</li>
            <li>商品の選定解除はいつでも可能です</li>
            <li>本社管理者のみが拠点の商品選定を変更できます</li>
        </ul>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 1050;">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 1050;">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}